<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard1.3</TargetFramework>
    <AssemblyName>Merq.Async.Core</AssemblyName>
    <RootNamespace>Merq</RootNamespace>
  </PropertyGroup>

  <PropertyGroup>
    <PackageId>Merq.Async.Core</PackageId>
    <Title>Merq: IAsyncManager (Implementation)</Title>
    <Description>Default implementation of IAsyncManager using Microsoft.VisualStudio.Threading cross-platform package.</Description>
    <Summary>Provides an advanced implementation of IAsyncManager based on the Microsoft.VisualStudio.Threading nuget package, which provides much improved reentrancy support and significantly reduces deadlocks.</Summary>
    <Copyright>Copyright 2016 © Mobile Essentials</Copyright>

    <IncludeContentInPackage>false</IncludeContentInPackage>
    <IncludeContentInPack>false</IncludeContentInPack>

    <IncludeGlobalAssemblyInfo>false</IncludeGlobalAssemblyInfo>
  </PropertyGroup>

  <Import Project="$([MSBuild]::GetDirectoryNameOfFileAbove('$(MSBuildThisFileDirectory)..\', 'Merq.props'))\Merq.props" />

  <ItemGroup>
    <PackageReference Include="IFluentInterface" Version="2.0.3" PrivateAssets="all" />
    <PackageReference Include="MSBuilder.ThisAssembly.Project" Version="0.3.3" PrivateAssets="all" />
    <PackageReference Include="Microsoft.VisualStudio.Threading" Version="15.7.18" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\Merq.Async\Merq.Async.csproj" />
  </ItemGroup>

  <ItemGroup>
    <PackageFile Include="Merq.Async" Kind="Dependency" Version="1.1.0" />
    <PackageFile Include="Microsoft.VisualStudio.Threading" Kind="Dependency" Version="15.7.18" />
  </ItemGroup>

  <!-- We keep an invariant version based on GitInfo -->
  <Target Name="SetVersionPrefix" BeforeTargets="GetVersion" DependsOnTargets="GitInfo">
    <PropertyGroup>
      <VersionPrefix>$(GitBaseVersionMajor).$(GitBaseVersionMinor).$(GitBaseVersionPatch)</VersionPrefix>
    </PropertyGroup>
  </Target>

  <Target Name="AddPackageContents" BeforeTargets="GetPackageContents">
    <ItemGroup>
      <PackageFile Include="$(OutputPath)\$(PackageId).*" Exclude="$(OutputPath)\$(PackageId)*.nupkg" Kind="Lib" />
    </ItemGroup>
  </Target>

</Project>